        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="使用者AD密碼：" />
            <TextBox Name="txtAdPassword" Width="200" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Width="60" Content="確定" />
