    xmlns:local="clr-namespace:AuthAnubis"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthDoubleWithoutCard"
    Width="402.938"
    Height="193.77"
    FontSize="14"
    mc:Ignorable="d">
